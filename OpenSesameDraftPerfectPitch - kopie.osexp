	            fact = Fact(i, item['cue'], item['answer'])
	            m.add_fact(fact)
	    
	    def get_next_item(self):
	        self.item = self.spacing_model.get_next_fact( \
	                        current_time = self.current_trial_start_time)
	        return self.item
	    
