define inline_script UI_Class
	set description "Executes Python code"
	___run__
	class UI:
	    def __init__(self):
	        self.current_screen = 'none'
	        self.keyboard = Keyboard(self)
	        self.currently_displayed_texts = []
	        
	    def create_canvas(self):
	        self.canvas = Canvas()
	        self.current_screen = 'canvas'
	        
	    def add_text_to_canvas(self, text):
	        self.canvas.text(text.string, y= text.y, \
	                         font_size= text.font_size, color= text.color)
	        
	    def add_lock_text(self, text_list):
	        self.locked_text += text_list
	        
	    def lock_text(self):
	        self.locked_text = self.currently_displayed_texts
	        
	    def unlock_text(self):
	        self.locked_text = []
	        
	    def show_texts_on_canvas(self, text_list):
	        if self.current_screen != 'canvas': self.create_canvas()
	        self.canvas.clear()
	        self.currently_displayed_texts = []
	        
	        text_list += self.locked_text
	        
	        for text in text_list:
	            self.add_text_to_canvas(text)
	            
	        self.currently_displayed_texts = text_list
	        
	        self.canvas.prepare()
	        self.canvas.show()
	        
	    def show_text_on_canvas(self, text, y= 0, font_size= 20, color= 'white'):
	        text_obj = Text(text, y, font_size, color)
	        show_texts_on_canvas(self, [text_obj])
	        
	    def repeat_cue(self):
	        pass
	        
	    def play_audio(self, file_name):
	        src = pool[file_name]
	        Sampler(src).play()
	
	    def get_text_input(self):
	        return self.keyboard.take_input()
	__end__
	set _prepare ""

