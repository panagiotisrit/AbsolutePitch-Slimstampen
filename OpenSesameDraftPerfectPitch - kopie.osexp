define inline_script Keyboard_Input
	set description "Executes Python code"
	___run__
	class Keyboard_Input:
	    def __init__(self, interface):
	        self.keyboard = Keyboard()
	        self.text = ""
	        self.interface = interface
	        
	    def set_to_init_values(self):
	        self.n_presses = 0
	        self.text = ""
	        self.t_first_input = 0
	        self.t_last_empty = 0
	        self.t_return = 0
	        
	    def register_times(self, key):
	        t = clock.time()
	        if not self.n_presses and not self.is_ctrl_chr(key):
	            self.t_first_input = t
	        if not self.text and not self.is_ctrl_chr(key):
	            self.t_last_empty = t
	        if key == 'return':
	            self.t_return = t
	        
	    def add_char_to_end(self, char):
	        self.text += char
	        
	    def remove_char_from_end(self):
	        if self.text == '': return
	        self.text = self.text[:-1]
	    
	    def parse_key_press(self, key):
	        if key == 'return': True
	        elif key == 'backspace': self.remove_char_from_end()
	        elif key == '1': self.interface.repeat_cue()
	        elif key == 'space': self.add_char_to_text(' ')
	        else: self.add_char_to_text(self.keyboard.to_chr(key))
	        return False
	        
	    def take_input(self):
	        is_done = False
	        self.interface.lock_text()
	        while is_done:
	            key, _ = keyboard.get_key()
	            register_times(key)
	            is_done = self.parse_key_press(key)
	            self.interface.show_text_on_canvas(self.text, y= 100)
	        self.interface.unlock_text()
	        return self.text, self.t_first_input
	__end__
	set _prepare ""

