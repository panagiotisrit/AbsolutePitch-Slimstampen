		my_canvas.show()
	
	
	# Check if the response is correct
	correct = keyboard_response == answerinst
	
	# Log response
	response = Response(next_factinst, trial_start_time, rt, correct, "instrument", "train")
	minstruments.register_response(response) 
	
	# Show feedback
